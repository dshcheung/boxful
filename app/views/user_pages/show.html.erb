<div class="container-fluid private-page">

  <%= render :partial => 'navbar/private_nav' %>

  <div id="section-1">
    <div class="col-xs-12 col-sm-6">
      <h1>My Addresses</h1>
      <div id="delivery-address-table">
        <table class="table" data-toggle="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
            </tr>
            <% @delivery_addresses.each do |address| %>
              <tr>
                <td><%= address.name %></td>
                <td><%= address.address1 + ", " + address.address2 + ", " + address.region + ", " + address.district %></td>
              </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6" id="delivery-address-form-div">
      <h1>Create a new Address!</h1>
      <%= form_for @delivery_address, url: delivery_addresses_path, html: {id: "new_delivery_address"}, format: :json, remote: true do |f| %>
        <div class="row">
          <%= f.label 'Address Name', :class => "col-xs-offset-1 col-xs-5" %>
          <%= f.text_field :name, :class => "col-xs-5"%>
        </div>
        <div class="row">
          <%= f.label :address1, :class => "col-xs-offset-1 col-xs-5" %>
          <%= f.text_field :address1, :class => "col-xs-5"%>
        </div>
        <div class="row">
          <%= f.label :address2, :class => "col-xs-offset-1 col-xs-5" %>
          <%= f.text_field :address2, :class => "col-xs-5"%>
        </div>
        <div class="row">
          <%= f.label :region, :class => "col-xs-offset-1 col-xs-5" %>
          <%= f.text_field :region, :class => "col-xs-5"%>
        </div>
        <div class="row">
          <%= f.label :district, :class => "col-xs-offset-1 col-xs-5" %>
          <%= f.text_field :district, :class => "col-xs-5"%>
        </div>
        <div class="row">
          <%= f.label :contact_number, :class => "col-xs-offset-1 col-xs-5" %>
          <%= f.number_field :contact_number, :class => "col-xs-5"%>
        </div>
        <div class="row">
          <%= f.label :default, :class => "col-xs-offset-1 col-xs-5" %>
          <%= f.check_box :default %>
        </div>
        <div class="row">
          <%= f.submit "Create", :class => "col-xs-offset-4 col-xs-4 btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>