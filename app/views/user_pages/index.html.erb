<div class="container-fluid private-page">

  <%= render :partial => 'navbar/private_nav' %>

  <div id="section-1">
    <h1>My Boxes</h1>

    <div class="col-xs-4">
      <h2>@Home</h2>
      <table class="table" data-toggle="table">
        <thead>
          <tr>
            <th>Box ID</th>
            <th>Order ID</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-xs-4">
      <h2>@Transit</h2>
      <table class="table" data-toggle="table">
        <thead>
          <tr>
            <th>Box ID</th>
            <th>Order ID</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-xs-4">
      <h2>@Warehouse</h2>
      <table class="table" data-toggle="table">
        <thead>
          <tr>
            <th>Box ID</th>
            <th>Order ID</th>
          </tr>
        </thead>
      </table>
    </div>



    <% @delivery_addresses.each do |address| %>
    <h2>@ <%= address.address1 + ", " + address.address2 + ", " + address.region + ", " + address.district %></h2>
      <table class="table" data-toggle="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>User ID</th>
            <th>Order ID</th>
            <th>Date</th>
          </tr>
          <% address.orders.each do |order| %>
            <% order.boxes.each do |box| %>
              <tr>
                <td class="active"><%= box.id %></td>
                <td class="success"><%= box.user_id %></td>
                <td class="warning"><%= box.order_id %></td>
                <td class="info"><%= box.created_at.to_date.to_s %></td>
              </tr>
            <% end %>
          <% end %>
        </thead>
      </table>
    <% end %>
  </div>
</div>