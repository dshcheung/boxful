$(document).ready(function(){
  $(document).on('ajax:success', '#new_drop_full_order', function(e, data, status, xhr){
      $('#retrieve-page-messages').html('We Have Received Your Order<br>Redirecting In 5 Seconds');
      $('#section-2').addClass('hide');
      setTimeout(function(){
        window.location.href = Routes.user_pages_path();
      }, 5000);
      noty({
        text: "We Have Received Your Order!",
        animation: {
            open: {height: 'toggle'}, // jQuery animate function property object
            close: {height: 'toggle'}, // jQuery animate function property object
            easing: 'swing', // easing
            speed: 500 // opening & closing animation speed
        }
      });
  });
});